{
  "name": "test-npm-pkg",
  "version": "0.0.1",
  "description": "A demo package for testing",
  "keywords": [
    "demo",
    "typescript",
    "test-npm-pkg"
  ],
  "homepage": "https://github.com/md-nahid/test-npm-pkg",
  "bugs": {
    "url": "https://github.com/md-nahid/test-npm-pkg/issues"
  },
  "author": "Nahid",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/md-nahid/test-npm-pkg.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev:test": "vitest",
    "test": "vitest run",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "release": "changeset version && changeset publish",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "ci": "pnpm run build && pnpm run check-format && pnpm run check-exports && pnpm run test"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@changesets/cli": "^2.27.9",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
